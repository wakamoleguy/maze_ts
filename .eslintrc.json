{
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "prettier/prettier": [
      "error", {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "es5",
        "printWidth": 80
      }
    ]
  }
}
